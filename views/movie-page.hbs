<!-- Main Wrapper -->
<div class="p-1 my-container">
    <!-- Top Nav -->
    <nav class="navbar top-navbar navbar-light bg-white px-5 sticky-top">
        <a class="btn border-0" id="menu-btn"><i class="bx bx-menu"></i></a>
    </nav>
    <!--End Top Nav -->
    <h1 class="h1 text-center mb-5">Movie Information</h1>
    <div class="container-lg mb-2 my-5">
        <table class="table table-striped" id="movies-table">
            <thead class="table table-fluid">
                <tr>
                    <th>Movie Id</th>
                    <th>Movie Name</th>
                    <th>Movie Year</th>
                    <th>Movie Rating/Rank</th>
                </tr>
            </thead>

            <tbody>
                <tr id="{{dataDB.id}}">
                    <td>
                        <h3 class="movie-id">{{dataDB.id}}</h3>
                    </td>
                    <td>
                        <h3 class="movie-name">{{dataDB.name}}</h3>
                    </td>
                    <td>
                        <h3 class="movie-year">{{dataDB.year}}</h3>
                    </td>
                    <td>
                        <h3 class="movie-rank">{{dataDB.rank}}</h3>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="container-lg mb-2 my-5 text-center">
        <button type="button" class="btn btn-primary btn-lg mx-4" id="update-movie-btn" data-bs-toggle="modal"
            data-bs-target="#edit_modal" data-id="{{dataDB.id}}">Update
            Info</button>

        <button type="button" class="btn btn-danger btn-lg mx-4" id="delete-movie-btn">Delete
            Movie</button>
    </div>


    <div class="toast-container position-fixed top-0 end-0 p-3" id="toast-container"
        style="z-index: 1090; visibility: hidden;">
        <!-- Then put toasts within -->
        <div class="toast align-items-center" id="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="toast-body">
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

</div>