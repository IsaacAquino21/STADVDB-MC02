<!-- Modal -->
<div class="modal fade" id="edit_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Movie Info</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <h3 class="h3 me-4" style="display: inline;">Movie Id:</h3>
                        <h4 class="h4" id="movie-id" style="display: inline;">{{dataDB.id}}</h4>
                    </div>
                    <div class="mb-3">
                        <label for="movie-name" class="col-form-label">Movie Name</label>
                        <input type="text" class="form-control" id="movie-name">
                    </div>

                    <div class="mb-3">
                        <label for="movie-year" class="col-form-label">Movie Year</label>
                        <input type="text" class="form-control" id="movie-year">
                    </div>

                    <div class="mb-3">
                        <label for="movie-rank" class="col-form-label">Movie Rank</label>
                        <input type="text" class="form-control" id="movie-rank">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="submit-discount-btn">Update
                    Info</button>
            </div>
        </div>
    </div>

</div>
